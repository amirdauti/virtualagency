{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for the Virtual Agency app",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-spawn",
    "shell:allow-execute",
    "shell:allow-open",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "fs:allow-applocaldata-read-recursive",
    "fs:allow-applocaldata-write-recursive",
    "fs:allow-temp-read-recursive",
    "fs:allow-temp-write-recursive",
    "fs:allow-mkdir",
    "fs:allow-write-file",
    "fs:allow-read-file",
    "fs:scope-temp",
    "clipboard-manager:allow-read-image"
  ]
}
